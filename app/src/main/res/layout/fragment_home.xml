<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Top Design Curve Header -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_bottom_sheet"
        android:backgroundTint="@color/primary_dark"
        android:rotation="180" 
        app:layout_constraintTop_toTopOf="parent"/>
    
    <!-- Fix rotation issue manually or just use a standard rectangle with bottom corners if simple view rotation is weird for bottom sheet. 
         Actually better: plain primary_dark view for header, we can add a curve later if needed or usage bg_bottom_sheet_inverted.
         For now, a rect is clean and enables floating card overlap. -->
    <View
        android:id="@+id/headerBlock"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primary_dark"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/welcomeSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pocket Manager"
        android:textSize="14sp"
        android:alpha="0.8"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="@id/welcomeText"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeSub"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Floating Balance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/primary_violet"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:text="Budget Total"
                        android:textColor="#CCFFFFFF"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/budgetAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1000 TND"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="32sp"
                            android:textColor="@color/color_white"/>
                        
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solde disponible"
                        android:layout_marginTop="16dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:background="@drawable/bg_input_pill"
                        android:backgroundTint="#33FFFFFF"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats & Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="2"
                android:layout_marginBottom="24dp">

                <!-- Dépenses Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/color_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_home" 
                            app:tint="#D32F2F"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#1AD32F2F"
                            android:padding="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dépenses"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/expensesAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200 TND"
                            android:textColor="@color/text_main"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Location Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/color_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/primary_violet"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#1A5B3FD6"
                            android:padding="6dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Localisation"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tunis"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text_main"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Chart Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyse &amp; Statistiques"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/color_white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Revenus"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"/>
                            <TextView
                                android:id="@+id/revenueAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 TND"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="#388E3C"/>
                        </LinearLayout>
                        
                        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                        
                        <!-- Icon or menu for chart -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/text_secondary"/>
                    </LinearLayout>

                    <!-- Chart Container - Clear Large Size -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/revenueChart"
                        android:layout_width="match_parent"
                        android:layout_height="220dp" 
                        android:layout_marginBottom="8dp"/>
                        
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ads Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offres Partenaires"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:layout_marginBottom="12dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"> <!-- padding for elevation clip -->

                    <!-- Pub 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="260dp"
                        android:layout_height="140dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/color_white">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pocketmanagerpub1"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Pub 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="260dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/primary_accent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Espace Publicité"
                            android:layout_gravity="center"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
