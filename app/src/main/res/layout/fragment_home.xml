<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bienvenue -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue sur Pocket Manager"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_main"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Grande carte Budget -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/gray_dark_cards">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/budgetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget Total"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/budgetAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000 TND"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#388E3C"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solde disponible"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Deux cartes côte à côte: Dépenses / Localisation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Dépenses -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:elevation="6dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/gray_dark_cards">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dépenses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_main"/>

                    <TextView
                        android:id="@+id/expensesAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 TND"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Localisation -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:elevation="6dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/gray_dark_cards">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emplacement actuel"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_main"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tunis, Tunisie"
                        android:textSize="16sp"
                        android:textColor="@color/gray_light_text"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Mini graphiques dépenses / revenus -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistiques"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_main"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Graphique dépenses -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/gray_dark_cards"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Ici tu peux mettre un PieChart ou BarChart -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graphique Dépenses"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Graphique revenus -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/gray_dark_cards"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Revenus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_main"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/revenueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 TND"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#388E3C"
                        android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/revenueChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Publicité horizontale -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicités"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_main"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Pub 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="16dp"
                    android:backgroundTint="@color/gray_dark_cards">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publicité 1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pub 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:elevation="6dp"
                    app:cardCornerRadius="16dp"
                    android:backgroundTint="@color/gray_dark_cards">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publicité 2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
