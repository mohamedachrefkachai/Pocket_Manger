<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mauve">

    <!-- Top Section: Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue !"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Commencez par ajouter votre solde initial"
            android:textColor="@color/white_opacity_70"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bottom Section: Form Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_bottom_sheet_login"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etInitialBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Entrez votre solde (TND)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white_opacity_70"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnConfirmBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mauve"
            android:padding="14dp"
            android:text="Valider et Se connecter"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Passer pour le moment"
            android:textColor="@color/mauve_light"
            android:textStyle="bold"
            android:padding="8dp"/>

    </LinearLayout>

</LinearLayout>
