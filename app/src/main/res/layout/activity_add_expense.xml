<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/primary_accent"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add expense"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Amount Section -->
            <TextView
                android:id="@+id/labelAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Amount"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle" />

            <FrameLayout
                android:id="@+id/amountContainer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bg"
                app:layout_constraintTop_toBottomOf="@id/labelAmount">

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="100"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/color_white"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:text="DT"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Description Section (Titre) -->
            <TextView
                android:id="@+id/labelDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Description"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amountContainer" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bg"
                android:hint="burger"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/color_white"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/labelDescription" />

            <!-- Photo Section -->
            <TextView
                android:id="@+id/labelPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Receipt Photo"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etTitle" />

            <ImageView
                android:id="@+id/imgReceipt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bg"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelPhoto" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPhoto"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a photo"
                android:textAllCaps="false"
                android:textColor="@color/primary_accent"
                app:layout_constraintBottom_toBottomOf="@id/imgReceipt"
                app:layout_constraintStart_toEndOf="@id/imgReceipt"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/imgReceipt" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnalyzeReceipt"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyze Receipt"
                android:textAllCaps="false"
                android:textColor="@color/primary_accent"
                app:layout_constraintStart_toEndOf="@id/imgReceipt"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnPhoto"
                app:layout_constraintBottom_toBottomOf="@id/imgReceipt" />

            <!-- GPS Section -->
            <TextView
                android:id="@+id/labelLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Location"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgReceipt" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetLocation"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get current location"
                android:textAllCaps="false"
                android:textColor="@color/primary_accent"
                app:layout_constraintBottom_toBottomOf="@id/labelLocation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/labelLocation" />

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/labelLocation" />

            <!-- Latitude/Longitude display -->
            <LinearLayout
                android:id="@+id/layoutCoordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/map">

                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lat: --"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lon: --"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Address: Not detected"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/layoutCoordinates" />

            <!-- Add Expense Button -->
            <Button
                android:id="@+id/btnSaveExpense"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/primary_violet"
                android:text="+ Add expense"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvAddress" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
