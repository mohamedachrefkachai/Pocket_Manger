<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark">

    <!-- Top Section (Title) -->
    <TextView
        android:id="@+id/titleReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réinitialisation"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- Bottom Card Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_bottom_sheet"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="32dp"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez votre email et votre nouveau mot de passe"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/emailReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_pill"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawablePadding="16dp"
                android:drawableTint="@color/primary_violet"
                android:hint="Votre Email"
                android:textColorHint="@color/text_secondary"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_main"
                android:padding="16dp" />

            <!-- Code Verification -->
            <EditText
                android:id="@+id/codeVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_pill"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="16dp"
                android:drawableTint="@color/primary_violet"
                android:hint="Code de vérification"
                android:textColorHint="@color/text_secondary"
                android:inputType="number"
                android:visibility="gone"
                android:textColor="@color/text_main"
                android:padding="16dp" />

            <!-- New Password -->
            <EditText
                android:id="@+id/newPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_pill"
                android:drawableStart="@android:drawable/ic_lock_lock"
                android:drawablePadding="16dp"
                android:drawableTint="@color/primary_violet"
                android:hint="Nouveau mot de passe"
                android:textColorHint="@color/text_secondary"
                android:inputType="textPassword"
                android:visibility="gone"
                android:textColor="@color/text_main"
                android:padding="16dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/confPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_pill"
                android:drawableStart="@android:drawable/ic_lock_lock"
                android:drawablePadding="16dp"
                android:drawableTint="@color/primary_violet"
                android:hint="Confirmer le mot de passe"
                android:textColorHint="@color/text_secondary"
                android:inputType="textPassword"
                android:visibility="gone"
                android:textColor="@color/text_main"
                android:padding="16dp" />

            <!-- Reset Button -->
            <Button
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_cta_button"
                android:text="ENVOYER CODE"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
